@import "../../../assets/stylus/mixins.styl"
.newProduct
  background-color #fff
  margin-top 10px
  .newTitle
    height 130px
    background-color #FEF7E3
    display flex
    flex-direction column
    align-items center
    justify-content center
    .text
      font-size 18px
      font-weight 700
      color #D1C3A3
    .more
      width 110px
      height 25px
      margin-top 10px
      background-color #F4E9CB
      display flex
      align-items center
      justify-content center
      span
        font-size 14px
        color #D1C3A3
  .swiper-container
    width 365px
    height 240px
    margin-left 10px
    background-color #fff
    .swiper-wrapper
      .swiper-slide
        width 160px
        height 200px
        padding 10px 0
        .liContent
          display flex
          flex-direction column
          justify-content center
          img
            width 140px
            height 140px
          .name
            font-size 15px
            margin 5px 0
            display block
            width 140px
            height 20px
          .info
            font-size 12px
            margin-bottom 5px
            display block
            width 140px
            height 20px
          .price
            font-size 12px
            color red