@import "../../../assets/stylus/mixins.styl"

.newProduct
  background-color #ffffff
  .newTitle
    height 130px
    background-color #F1F7FD
    display flex
    flex-direction column
    align-items center
    justify-content center
    .text
      font-size 18px
      font-weight 700
      color #8ba0b6
    .more
      width 110px
      height 25px
      margin-top 10px
      background-color #D8E5F1
      display flex
      align-items center
      justify-content center
      span
        font-size 14px
        color #8ba0b6
  .swiper-container
    width 100%
    height 240px
    background-color #fff
    .swiper-wrapper
      width 365px
      padding-left 10px
      .swiper-slide
        width 160px
        height 200px
        padding 10px 0
        .liContent
          display flex
          flex-direction column
          justify-content center
          img
            width 140px
            height 140px
          .name
            font-size 14px
            margin 5px 0
            display block
            width 140px
            height 20px
          .info
            font-size 12px
            margin-bottom 5px
            display block
            width 140px
            height 20px
          .price
            font-size 12px
            color red