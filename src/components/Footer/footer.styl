@import "../../assets/stylus/mixins.styl"

#footer
  top-border-1px(#e4e4e4)
  background-color #fff
  width 100%
  height 50px
  position fixed
  left 0
  right 0
  bottom 0
  display flex
  z-index 5
  .item
    display flex
    flex 1
    text-align center
    flex-direction column
    align-items center
    font-size 14px
    margin 7px
    &.active
      span,.iconfont
        color #B4282D
    .iconfont
      font-size 22px